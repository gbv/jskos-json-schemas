{
  "name": "jskos-tools",
  "version": "0.1.18",
  "description": "Tools for working with the JSKOS data format.",
  "homepage": "https://github.com/gbv/jskos-tools",
  "repository": {
    "type": "git",
    "url": "https://github.com/gbv/jskos-tools.git"
  },
  "bugs": {
    "url": "https://github.com/gbv/jskos-tools/issues"
  },
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "test": "mocha",
    "lint": "eslint ./*.js ./**/*.js ./bin/*",
    "fix": "eslint --fix ./*.js ./**/*.js ./bin/*",
    "lint-staged": "lint-staged",
    "docs": "jsdoc --configure jsdoc.json && cp -r jsdoc/assets/* jsdoc/build"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "pre-commit": [
    "test",
    "lint-staged"
  ],
  "author": "Stefan Peters",
  "devDependencies": {
    "eslint": "^5.6.0",
    "foodoc": "0.0.9",
    "glob": "^7.1.2",
    "jsdoc": "^3.5.5",
    "lint-staged": "^7.3.0",
    "mocha": "^5.2.0",
    "pre-commit": "^1.2.2"
  },
  "dependencies": {
    "ajv": "^6.5.2",
    "lodash": "^4.17.10",
    "simple-sha1": "^2.1.1"
  }
}
